/*   menu-box      */

.menu-box {
  position: relative;
  height: 80px;
  padding: 5px 0;
  box-sizing: border-box;
  margin-bottom: -80px;
}

.menuBackground {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: transparent;
  z-index: 99;
}

.iconList {
  text-align: center;
  border-top: 1px solid #eee;
}

.iconLine {
  margin-top: 20rpx;
}

.iconLine text {
  font-size: 24rpx;
  text-align: center;
  color: #959595;
}

.iconLine view {
  text-align: center;
}

.iconLine .icon-type{
  width:20%; position: relative; float:left; text-align:center;
}


.text-center {
  text-align: center;
}

.img-menu {
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  text-align: center;
}

.img-menu2 {
  width: 60rpx;
  height: 60rpx;
  display: inline-block;
  text-align: center;
}

.emoji-move-in {
  -webkit-animation: emoji-move-in 0.3s forwards;
  animation: emoji-move-in 0.3s forwards;
}

.emoji-move-out {
  -webkit-animation: emoji-move-out 0.3s forwards;
  animation: emoji-move-out 0.3s forwards;
}

.no-emoji-move {
  -webkit-animation: none;
  animation: none;
}

@-webkit-keyframes emoji-move-in {
  0% {
    margin-bottom: -80px;
  }

  100% {
    margin-bottom: 0;
  }
}

@keyframes emoji-move-in {
  0% {
    margin-bottom: -80px;
  }

  100% {
    margin-bottom: 0;
  }
}

@-webkit-keyframes emoji-move-out {
  0% {
    margin-bottom: 0;
  }

  100% {
    margin-bottom: -80px;
  }
}

@keyframes emoji-move-out {
  0% {
    margin-bottom: 0;
  }

  100% {
    margin-bottom: -80px;
  }
}

